!! URxvt Appearance
urxvt.font: xft:Hack Nerd Font Mono:style=Regular:size=13:antialias=true
urxvt.boldFont: xft:Hack Nerd Font Mono:style=Bold:size=13:antialias=true
urxvt.italicFont: xft:Hack Nerd Font Mono:style=Italic:size=13:antialias=true
urxvt.boldItalicfont: xft:Hack Nerd Font Mono:style=Bold Italic:size=13:antialias=true
urxvt.letterSpace: -1 
urxvt.lineSpace: 0

!! real transparency using the composite manager
urxvt.background: [50]#000000
urxvt.depth: 32
!! fake transparency
!urxvt.transparent: true 
!urxvt.shading: 45
!! general settings
urxvt.geometry: 80x24 
urxvt.internalBorder: 0
urxvt.externalBorder: 0
urxvt.buffered: true
urxvt.fading: 50
urxvt.tintColor: #000000
urxvt.saveLines: 10000
urxvt.scrollBar: false
urxvt.scrollBar_right: false
urxvt.urgentOnBell: true
urxvt.iso14755: false

!! the cursor
urxvt.cursorColor: magenta
urxvt.cursorColor2: white
! the following two have no effect since I'm overriding the behaviour in ~/.config/zsh/zsh-vimode
urxvt.cursorBlink: false
urxvt.cursorUnderline: false

!! mouse pointer
urxvt.pointerColor: magenta
urxvt.pointerBlank: true
urxvt.pointerBlankDelay: 3

!! URL handling
urxvt.perl-lib: ~/.config/urxvt/
urxvt.perl-ext-common: matcher
urxvt.urlLauncher: xdg-open 
urxvt.matcher.button: 1

!! fixing escape sequences for Ctrl-Cursor
urxvt.keysym.Control-Up:     \033[1;5A
urxvt.keysym.Control-Down:   \033[1;5B
urxvt.keysym.Control-Left:   \033[1;5D
urxvt.keysym.Control-Right:  \033[1;5C

!! Colorscheme
urxvt.foreground: #B2B2B2
! black
urxvt.color0:  #000000
urxvt.color8:  #686868
! red
urxvt.color1:  #B21818
urxvt.color9:  #FF5454
! green
urxvt.color2:  #18B218
urxvt.color10: #54FF54
! yellow
urxvt.color3:  #B26818
urxvt.color11: #FFFF54
! blue
urxvt.color4:  #1818B2
urxvt.color12: #5454FF
! purple
urxvt.color5:  #B218B2
urxvt.color13: #FF54FF
! cyan
urxvt.color6:  #18B2B2
urxvt.color14: #54FFFF
! white
urxvt.color7:  #B2B2B2
urxvt.color15: #FFFFFF

