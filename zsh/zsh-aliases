alias ll='ls -lh --color'
alias la='ls -lha --color'
alias ..='cd ..'
alias vi='nvim'
alias lsb='lsblk -o NAME,MAJ:MIN,RM,SIZE,RO,TYPE,MOUNTPOINTS,LABEL,UUID'

# mounts for rmount
alias rmountMD='rclone mount --daemon --password-command="pass rclone/config" --vfs-cache-mode writes' 
alias rmountNC='rmountMD --webdav-url=`pass Online/NextCloud/url` --webdav-pass=`pass Online/NextCloud/Dominique | rclone obscure -`'
alias mountncf='rmountNC nc:FamilyShare /mnt/dominique/nextcloud/family'
alias mountgdd='rmountMD google_drive_dst: /mnt/dominique/googledrive/dst'

# tools with less than ideal names
alias irc='irssi'
alias music='ncmpcpp'
