alias ll='ls -lh --color'
alias la='ls -lha --color'
alias ..='cd ..'
alias vi='nvim'
alias lsb='lsblk -o NAME,MAJ:MIN,RM,SIZE,RO,TYPE,MOUNTPOINTS,LABEL,UUID'

# mounts for rmount
alias rmountMD='rclone mount --daemon --password-command="pass rclone/config" --vfs-cache-mode writes' 
alias rmountNC='rmountMD --webdav-url=`pass Online/NextCloud/url` --webdav-pass=`pass Online/NextCloud/Dominique | rclone obscure -`'
alias mountncd='rmountNC nc:Documents /media/dominique/nextcloud/personal'
alias mountncf='rmountNC nc:FamilyShare /media/dominique/nextcloud/family'
alias mountgdd='rmountMD --drive-client-id=`pass rclone/googledrive/dst/clientid` --drive-client-secret=`pass rclone/googledrive/dst/secret` \
  google_drive_dst: /media/dominique/googledrive/dst'
